            A continuación se detallan las prácticas preprofesionales asignadas:
        </p>
        <section>
            <div class="text-center mt-6">
                <button id="cargarPracticasBtn"
                    class="px-4 py-2 text-white bg-blue-600 rounded hover:bg-blue-500 focus:outline-none">
                    Cargar Prácticas Preprofesionales
                </button>
            </div>

            <!-- Contenedor con desbordamiento horizontal -->
            <div class="overflow-x-auto mt-6 p-5">
                <table class="min-w-full text-sm text-left text-gray-500 border border-gray-300 rounded-lg">
                    <thead class="text-xs text-gray-700 uppercase bg-gray-200 dark:bg-gray-700 dark:text-gray-400">
                        <tr>
                            <th scope="col" class="px-6 py-3">ID Práctica</th>
                            <th scope="col" class="px-6 py-3">Nombre estudiante</th>
                            <th scope="col" class="px-6 py-3">Cédula Estudiante</th>
                            <th scope="col" class="px-6 py-3">Empresa</th>
                            <th scope="col" class="px-6 py-3">Carrera</th>
                            <th scope="col" class="px-6 py-3">Fecha inicio</th>
                            <th scope="col" class="px-6 py-3">Fecha fin</th>
                            <th scope="col" class="px-6 py-3">Calificación</th>
                            <th scope="col" class="px-6 py-3">Estado</th>
                            <th scope="col" class="px-6 py-3"></th>
                        </tr>
                    </thead>
                    <tbody id="tbody-carro" class="bg-white divide-y divide-gray-200">
                        <!-- Aquí se llenan dinámicamente los datos -->
                    </tbody>
                </table>
            </div>
        </section>

        <script>
            // Script para cargar las prácticas en la tabla
            document.getElementById("cargarPracticasBtn").addEventListener("click", function () {
                const idDocente = "<%= datos.idBase %>"; // Obtener el ID del docente desde el backend

                // Verifica que el ID del docente es correcto
                console.log("Docente ID: ", idDocente);

                // Realiza una solicitud para obtener las prácticas preprofesionales
                fetch(`/practicasPreprofesionales/${idDocente}`)
                    .then(response => response.json())
                    .then(data => {
                        const tbody = document.getElementById("tbody-carro");
                        tbody.innerHTML = ''; // Limpiar las filas actuales de la tabla

                        // Verificar si no hay prácticas
                        if (data.length === 0) {
                            tbody.innerHTML = '<tr><td colspan="10" class="text-center text-gray-500 py-3">No se encontraron prácticas preprofesionales.</td></tr>';
                        } else {
                            // Si hay prácticas, crear las filas en la tabla
                            data.forEach(practica => {
                                const row = document.createElement("tr");

                                row.innerHTML = `
                        <td class="px-6 py-3">${practica.id_practica}</td>
                        <td class="px-6 py-3">${practica.nombre_estudiante}</td>
                        <td class="px-6 py-3">${practica.cedula_estudiante}</td>
                        <td class="px-6 py-3">${practica.empresa}</td>
                        <td class="px-6 py-3">${practica.materia}</td>
                        <td class="px-6 py-3">${practica.fecha_inicio}</td>
                        <td class="px-6 py-3">${practica.fecha_fin}</td>
                        <td class="px-6 py-3">${practica.calificacion}</td>
                        <td class="px-6 py-3">${practica.estado}</td>
                        <td class="px-6 py-3">
                            <form action="/eliminarPractica" method="POST">
                                <input type="hidden" name="idPractica" value="${practica.id_practica}">
                                <button type="submit" class="bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded">
                                    Eliminar
                                </button>
                            </form>
                        </td>
                        <td class="px-6 py-3">
                            <button type="button" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded editarBtn" data-id="${practica.id_practica}">
                                Editar
                            </button>
                        </td>
                    `;

                                tbody.appendChild(row);
                            });

                            // Agregar el evento para cada botón de editar
                            const botonesEditar = document.querySelectorAll('.editarBtn');
                            botonesEditar.forEach(boton => {
                                boton.addEventListener('click', function () {
                                    const idPractica = boton.getAttribute('data-id');
                                    cargarDatosPractica(idPractica);
                                });
                            });
                        }
                    })
                    .catch(error => {
                        console.error("Error al cargar las prácticas:", error);
                        alert("Hubo un error al cargar las prácticas preprofesionales.");
                    });
            });

        </script>




